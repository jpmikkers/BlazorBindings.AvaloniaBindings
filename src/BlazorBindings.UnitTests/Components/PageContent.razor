<ContentControl Tag="@("Test")">
    <NonPageContent />
</ContentControl>

@code
{
    public static void ValidateContent(Avalonia.StyledElement content)
    {
        var contentPage = content as AC.ContentControl;
        Assert.That(contentPage, Is.Not.Null);
        Assert.That(contentPage.Tag, Is.EqualTo("Test"));
        NonPageContent.ValidateContent((Avalonia.Visual)contentPage.Content);
    }
}