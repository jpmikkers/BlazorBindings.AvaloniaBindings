@page "/switchable-pages"

@if (_switch)
{
    <ContentControl Tag="@("Page1")">
        <Button OnClick="Switch" />
    </ContentControl>
}
else
{
    <ContentControl Tag="@("Page2")">
        <Button OnClick="Switch" />
    </ContentControl>
}

@code {
    bool _switch = true;
    void Switch() => _switch = !_switch;
}
