@using BlazorBindings.UnitTests
@using Avalonia.Interactivity

@inherits ElementTestBase

@code {
    [AvaloniaTest]
    public async Task ButtonOnClickEventCallback()
    {
        bool clicked = false;
        void HandleButtonClick() => clicked = true;
        var button = await Render<AC.Button>(@<Button OnClick="HandleButtonClick" />);

        button.ClickTrigger();

        StateHasChanged();

        Assert.That(clicked, Is.True);
    }
}
