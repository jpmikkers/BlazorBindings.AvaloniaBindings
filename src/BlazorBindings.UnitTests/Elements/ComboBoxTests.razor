@inherits ElementTestBase

@code
{
    [AvaloniaTest]
    public async Task SetArrayItemsSource()
    {
        var items = new[] { 1, 2, 3 };
        var picker = await Render<AC.ComboBox>(@<ComboBox ItemsSource="items" />);

        Assert.That(picker.Items, Is.EqualTo(new[] { 1, 2, 3 }));
    }

    [AvaloniaTest]
    public async Task SetListItemsSource()
    {
        var items = new List<int> { 1, 2, 3 };
        var picker = await Render<AC.ComboBox>(@<ComboBox ItemsSource="items" />);

        Assert.That(picker.Items, Is.EqualTo(new[] { 1, 2, 3 }));
    }

